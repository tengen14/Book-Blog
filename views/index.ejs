<% include partials/header %>
<% for (let blog of blogs) { %>

    <div class="container d-flex flex-column align-items-center">
        <h1><%= blog.title %></h1>
        <h2>By: <%= blog.author %></h2>
        
        <img src="<%= blog.image %>">
        
        <a class="btn btn-info" href="/books/<%= blog._id %>">Click for more info...</a>

    </div>
    <hr />

<% } %>
<br />
<a href="/books/new" class="btn btn-primary" id="new-book">Add a new book!</a>

<% include partials/footer %>